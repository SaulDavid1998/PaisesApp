@model  List<Pais>

@{
    ViewBag.Title = "Favoritos";
}


<div class="row mt-3 mb-4">
    <div class="col-md-8 text-center text-md-start">
        <h2 class="m-0">Lista de Países Favoritos</h2>
    </div>
   
    <div class="col-md-4 text-md-end text-center mt-2 mt-md-0">
        <a class="btn btn-success btn-lg"
           asp-action="Index"
           asp-controller="Home">
            Volver al Inicio
        </a>
    </div>
</div>

@if (Context.Session.ObtenerContador("contador_Favoritos")==0)
{
    <h3 class="text-center">Sin registros por el momento</h3>
}
else
{
    <div class="row mt-3 mb-4">
        <div class="col-md-8 text-center text-md-start">
            <h3 class="m-0">Paises Favoritos: @Context.Session.ObtenerContador("contador_Favoritos") </h3>
        </div>

        <div class="col-md-4 text-md-end text-center mt-2 mt-md-0">
            <form asp-action="GuardarFavoritos" asp-controller="Favoritos" method="post">
                <button class="btn btn-warning btn-lg"
                        asp-action="GuardarFavoritos" asp-controller="Favoritos">
                    Guardar
                </button>
            </form>
          
        </div>
    </div>
}

<div class="row gy-3 mt-4 align-items-center justify-content-center">
    
        @foreach (var registro in Model)
        {
        <div class="col-md-4 col-sm-6">
            <div class="card">
                <div class="card-body">
                    <img src="@registro.banderaUrl" class="card-img-top border" alt="Bandera de @registro.nombre">
                    <h5 class="card-title text-center">@registro.nombre</h5>

                    <a asp-controller="Paises" asp-action="Detalles" asp-route-id="@registro.nombre"
                       class="btn btn-primary w-100">Detalles</a>
                </div>
                
            </div>
            
        </div>
        }
    
</div>
